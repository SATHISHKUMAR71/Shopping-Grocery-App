<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.sharedviews.profileviews.WishListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        app:titleTextColor="@color/white"
        app:title="Wishlist"
        android:id="@+id/wishListListToolBar"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:menu="@menu/product_list_menu"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:navigationIconTint="@color/white" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wishedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/noItemsAvailableText"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Items Available in Wishlist (^_^)"/>

</LinearLayout>