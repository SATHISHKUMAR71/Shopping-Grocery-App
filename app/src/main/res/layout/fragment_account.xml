<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".views.sharedviews.profileviews.AccountFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hello! "
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="user Name"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/accountImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_ripple"
                    android:clipToOutline="true"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person_24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/editLayout"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editProfile"
                        style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:focusable="false"
                        android:textColor="#534B4B"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:text="    Edit Profile"
                        app:iconSize="24dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textAlignment="viewStart"
                        app:cornerRadius="4dp"
                        app:icon="@drawable/person_24px"
                        app:iconGravity="textStart" />
                    <ImageView
                        android:id="@+id/editProfileImage"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow_forward_ios_24px"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        app:tint="?attr/colorPrimary" />
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/guideLineColor"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/vertical_grey_line" />
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/orderHistoryLayout"
                android:focusable="true"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orderHistory"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:textColor="#534B4B"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:text="    Order History"
                    app:iconSize="24dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textAlignment="viewStart"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/history_24px"
                    app:iconGravity="textStart" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/orderHistoryImage"
                    android:src="@drawable/arrow_forward_ios_24px"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/guideLineColor"
                    android:background="@drawable/vertical_grey_line" />
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:id="@+id/helpLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/help"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#534B4B"
                    android:layout_weight="0.5"
                    android:text="    Help"
                    app:iconSize="24dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textAlignment="viewStart"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/headset_mic_24px"
                    app:iconGravity="textStart" />
                <ImageView
                    android:id="@+id/helpImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/arrow_forward_ios_24px"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:backgroundTint="@color/guideLineColor"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/helpLine"
                    android:background="@drawable/vertical_grey_line" />
            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:id="@+id/savedAddressLayout"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/savedAddress"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:iconSize="24dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_margin="10dp"
                    android:textColor="#534B4B"
                    android:layout_weight="0.5"
                    android:text="    Saved Address"
                    android:textAlignment="viewStart"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/location_on_24px"
                    app:iconGravity="textStart" />
                <ImageView
                    android:id="@+id/savedAddressImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/arrow_forward_ios_24px"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:backgroundTint="@color/guideLineColor"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"
                    android:id="@+id/savedAddressLine"
                    android:background="@drawable/vertical_grey_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/yourReqLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/customerReqHistory"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:iconSize="24dp"
                    android:textColor="#534B4B"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_weight="0.5"
                    android:text="    Your Requests"
                    android:textAlignment="viewStart"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/history_24px"
                    app:iconGravity="textStart" />
                <ImageView
                    android:id="@+id/customerReqHistoryImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/arrow_forward_ios_24px"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/requestLine"
                    android:backgroundTint="@color/guideLineColor"
                    android:background="@drawable/vertical_grey_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/wishListLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/wishlist"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:textColor="#534B4B"
                    android:text="    WishList"
                    app:iconSize="24dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textAlignment="viewStart"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/favorite_24px"
                    app:iconGravity="textStart" />
                <ImageView
                    android:id="@+id/wishlistImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/arrow_forward_ios_24px"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/guideLineColor"
                    android:id="@+id/wishListLine"
                    android:background="@drawable/vertical_grey_line" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="90dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recentlyPurchasedItems">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:text="Logout App"
                    android:textAlignment="center"
                    app:icon="@drawable/logout_24px"
                    app:iconGravity="textStart" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/recentlyPurchasedItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout52">

                <TextView
                    android:id="@+id/recentlyPurchasedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:text="Recently Purchased Items" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentlyPurchasedItemsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
